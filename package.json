{
  "name": "@curvenote/nbtx",
  "license": "MIT",
  "version": "0.1.3",
  "description": "Curvenote Notebook Tranlators",
  "author": "Steve Purves <steve@curvenote.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "src": "src"
  },
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/nbtx.git"
  },
  "scripts": {
    "test": "jest --config=jest.config.js --env=node --detectOpenHandles --forceExit --verbose",
    "test:dev": "jest --config=jest.config.js --env=node --detectOpenHandles",
    "test:watch": "jest --config=jest.config.js --watchAll --env=node --detectOpenHandles",
    "prepublishOnly": "npm run compile",
    "build": "tsc",
    "build:watch": "yarn watch",
    "compile": "npm run clean && tsc -p .",
    "lint": "eslint \"src/**/*.ts\" -c ./.eslintrc.js",
    "lint:format": "npx prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:format:fix": "npx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "watch": "tsc -w -p .",
    "clean": "rm -rf dist"
  },
  "bugs": {
    "url": "https://github.com/curvenote/curvenote/issues"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "@curvenote/blocks": "^1.3.3"
  },
  "devDependencies": {
    "@curvenote/blocks": "file:.yalc/@curvenote/blocks",
    "@types/jest": "^26.0.23",
    "@types/uuid": "^8.3.4",
    "eslint": "7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-no-skip-tests": "^1.1.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "26.6.0",
    "prettier": "^2.6.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.5.5"
  }
}

{
  "name": "@curvenote/blocks",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Schemas for the Curvenote API and data structures",
  "author": "Rowan Cockett <rowan@curvenote.com>",
  "homepage": "https://github.com/curvenote/blocks#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "src": "src",
    "test": "__tests__"
  },
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/blocks.git"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "build": "tsc",
    "compile": "npm run clean && tsc -p .",
    "watch": "yarn lint; tsc -w -p .",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/!(*.spec).ts\" -c ./.eslintrc.js",
    "lint:format": "npx prettier --check \"src/**/*.ts\"",
    "lint:format:fix": "npx prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:clear": "jest --clearCache"
  },
  "bugs": {
    "url": "https://github.com/curvenote/blocks/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "eslint": "7.27.0",
    "jest": "^27.0.4",
    "jest-extended": "^0.11.5",
    "jest-fixtures": "^0.6.0",
    "jest-runner-eslint": "^0.10.0",
    "jest-to-match-shape-of": "^1.3.1",
    "moment": "^2.29.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-skip-tests": "^1.1.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-import": "^2.23.4",
    "prettier": "^2.3.2"
  }
}

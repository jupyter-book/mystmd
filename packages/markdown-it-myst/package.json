{
  "name": "markdown-it-myst",
  "version": "1.0.10",
  "sideEffects": false,
  "license": "MIT",
  "description": "markdown-it tokenizer for MyST roles and directives",
  "author": "Franklin Koch <franklin@curvenote.com>",

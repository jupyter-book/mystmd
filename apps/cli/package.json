{
  "name": "curvenote",
  "version": "0.6.13",
  "description": "Command line tools for Curvenote",
  "author": "Rowan Cockett <rowan@curvenote.com>",
  "license": "MIT",
  "keywords": [
    "markdown",
    "latex",
    "writing-software",
    "scientific-visualization",
    "pdf-generation",
    "science-research"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/curvenote.git"
  },
  "bugs": {
    "url": "https://github.com/curvenote/curvenote/issues"
  },
  "bin": {
    "curvenote": "./dist/curvenote.js"
  },
  "homepage": "https://github.com/curvenote/curvenote",
  "scripts": {
    "clean": "rimraf dist",
    "copy:version": "echo \"const version = '\"$npm_package_version\"';\nexport default version;\" > src/version.ts",
    "unlink": "npm uninstall -g curvenote;",
    "link": "npm run unlink; npm link;",
    "dev": "npm run link && concurrently \"tsc -w --preserveWatchOutput -p .\" \"esbuild src/cli/index.ts --bundle --outfile=dist/curvenote.js --platform=node --external:jsdom --external:fsevents --watch\"",
    "prepublishOnly": "npm run build",
    "test": "npm run copy:version; npm run link; jest",
    "test:watch": "npm run copy:version; npm run link; jest --watchAll",
    "test:clear": "npm run copy:version; npm run link; jest --clearCache",
    "lint": "npm run copy:version; eslint \"src/**/*.ts\" -c .eslintrc.js",
    "lint:format": "npm run copy:version; prettier --check \"src/**/*.ts\"",
    "lint:format:fix": "npm run copy:version; prettier --write \"src/**/*.ts\"",
    "build:cjs": "esbuild `find src \\( -name '*.ts' \\)` --outdir=dist/cjs --platform=node --format=cjs",
    "build:esm": "esbuild `find src \\( -name '*.ts' \\)` --outdir=dist/esm --platform=node --format=esm",
    "declarations": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:cli": "esbuild src/cli/index.ts --bundle --outfile=dist/curvenote.js --platform=node --external:jsdom --external:fsevents",
    "build": "npm-run-all -l copy:version clean -p build:cjs build:esm declarations build:cli",
    "build:watch": "npm run copy:version; tsc -w --preserveWatchOutput -p ."
  },
  "dependencies": {
    "@curvenote/blocks": "*",
    "@curvenote/nbtx": "^0.1.11",
    "@curvenote/schema": "^0.12.16",
    "@google-cloud/storage": "^5.18.2",
    "@jupyterlab/nbformat": "^3.3.2",
    "@reduxjs/toolkit": "^1.7.2",
    "bottleneck": "^2.19.5",
    "chalk": "^4.1.2",
    "check-node-version": "^4.2.1",
    "chokidar": "^3.5.3",
    "citation-js-utils": "*",
    "cli-progress": "^3.10.0",
    "commander": "^8.3.0",
    "date-fns": "^2.25.0",
    "docx": "^7.3.0",
    "doi-utils": "^1.0.4",
    "html-entities": "^2.3.2",
    "inquirer": "^8.2.2",
    "js-yaml": "^4.1.0",
    "jsdom": "^18.0.0",
    "jsonwebtoken": "^8.5.1",
    "katex": "^0.15.2",
    "lodash.throttle": "^4.1.1",
    "mime-types": "^2.1.35",
    "myst-spec": "^0.0.4",
    "mystjs": "^0.0.13",
    "nanoid": "^3.3.2",
    "node-fetch": "^2.6.7",
    "p-limit": "^3.1.0",
    "pretty-hrtime": "^1.0.3",
    "prosemirror-docx": "^0.1.1",
    "prosemirror-model": "^1.18.1",
    "prosemirror-state": "^1.4.1",
    "redux": "^4.1.2",
    "which": "^2.0.2"
  },
  "overrides": {
    "prosemirror-tables": "^1.1.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@types/cli-progress": "^3.9.2",
    "@types/copyfiles": "^2.4.1",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.4",
    "@types/js-yaml": "^4.0.5",
    "@types/jsdom": "^16.2.14",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/katex": "^0.11.1",
    "@types/lodash.throttle": "^4.1.6",
    "@types/markdown-it": "^12.2.3",
    "@types/mime-types": "^2.1.1",
    "@types/mocha": "^8.2.3",
    "@types/node-fetch": "^2.5.12",
    "@types/pretty-hrtime": "^1.0.1",
    "@types/which": "^2.0.1",
    "concurrently": "^7.2.2",
    "esbuild": "^0.14.49",
    "eslint-config-curvenote": "*",
    "jest": "^27.5.1",
    "memfs": "^3.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prosemirror-schema-basic": "^1.2.0",
    "prosemirror-test-builder": "^1.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
